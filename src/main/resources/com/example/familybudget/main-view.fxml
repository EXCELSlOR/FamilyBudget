<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.familybudget.controller.MainController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <ComboBox prefWidth="150.0" />
            <CheckBox mnemonicParsing="false" text="с" />
            <DatePicker maxWidth="-Infinity" minWidth="-Infinity" prefWidth="100.0" />
            <CheckBox mnemonicParsing="false" text="по" />
            <DatePicker maxWidth="-Infinity" minWidth="-Infinity" prefWidth="100.0" />
         </children>
      </HBox>
      <TableView prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn prefWidth="75.0" text="№ п/п" />
            <TableColumn prefWidth="75.0" text="Название" />
          <TableColumn prefWidth="75.0" text="Тип" />
          <TableColumn prefWidth="75.0" text="Дата" />
            <TableColumn prefWidth="75.0" text="Сумма" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <Button mnemonicParsing="false" prefWidth="70.0" text="Добавить" />
            <Button mnemonicParsing="false" text="Редактировать" />
            <Button mnemonicParsing="false" prefWidth="70.0" text="Удалить" />
         </children>
      </HBox>
   </children>
</VBox>
